REMSG:  CALL    TWOCR
    CALL    SPMSG
    DB  'PERMANENT READ ERROR',CR,LF,0
    RET

WEMSG:  CALL    TWOCR
    CALL    SPMSG
    DB  'PERMANENT WRITE ERROR',CR,LF,0
    RET

WROPN:  CALL    TWOCR
    CALL    SPMSG
    DB  'CAN NOT OPEN FOR WRITE',CR,LF,0
    RET

CPDMA:  LXI D,TBUFF
    MVI C,SDMAF
    CALL    BDOS
    RET

DRSEL:  CALL    CIMSG
    LDA INBUF+2
    ANI 01011111B
    SUI '@'
    JM  DRERR
    SUI 17
    JP  DRERR
    ADI 17
    RET
DRERR:  XRA A
    RET